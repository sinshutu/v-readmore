{
  "name": "@sinshutu/vue-readmore",
  "version": "0.0.4",
  "description": "A Vue.js read more component",
  "main": "dist/v-readmore.umd.js",
  "module": "dist/v-readmore.esm.js",
  "unpkg": "dist/v-readmore.min.js",
  "browser": {
    "./sfc": "src/vue-readmore.vue"
  },
  "repository": "https://github.com/sinshutu/vue-readmore",
  "author": "sinshutu",
  "keywords": [
    "vue",
    "vue2",
    "readmore",
    "more",
    "component"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack -w --mode=development --config webpack.config.js --progress --hide-modules",
    "play": "poi --config play.config.js",
    "build:play": "poi build --config play.config.js",
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/v-readmore.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/v-readmore.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/v-readmore.min.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.1.0",
    "eslint-plugin-html": "^4.0.5",
    "getplay": "^0.2.0",
    "poi": "^8.0.0",
    "rollup": "^0.63.4",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-vue": "^4.3.1",
    "vue": "^2.5.16",
    "vue-play": "^3.2.1",
    "vue-template-compiler": "^2.5.16"
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": 1
    }
  }
}
