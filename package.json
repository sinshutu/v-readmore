{
  "name": "@sinshutu/vue-readmore",
  "version": "0.0.3",
  "description": "A Vue.js read more component",
  "main": "dist/index.js",
  "repository": "https://github.com/sinshutu/vue-readmore",
  "author": "sinshutu",
  "keywords": ["vue", "vue2", "readmore", "more", "component"],
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack -w --mode=development --config webpack.config.js --progress --hide-modules",
    "build": "cross-env NODE_ENV=production webpack --mode=production --config webpack.config.js --progress --hide-modules",
    "play": "poi --config play.config.js",
    "build:play": "poi build --config play.config.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.1.0",
    "eslint-plugin-html": "^4.0.5",
    "getplay": "^0.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "poi": "^8.0.0",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.6",
    "vue-play": "^3.2.1",
    "vue-style-loader": "^4.1.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8"
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": 1
    }
  }
}
